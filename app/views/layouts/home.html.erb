<%= content_for :vendor_scripts do %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
<%end%>

<%= content_for :stylesheets  do%>
  <style>
    body{
      width: <%= @width %>px;
      height: <%= @height %>px;
    }
  </style>
<%end%>

<%= content_for :scripts do %>
  <script>
    Wayfarer.mode = "<%= @mode %>";
    Wayfarer.config = <%= @extra_params.to_json.html_safe%>;
    Wayfarer.item_icon = "<%= image_path 'item.png' %>";
    Wayfarer.comment_icon = "<%= image_path 'comment.png' %>";
    Wayfarer.loading_icon = "<%= image_path 'loader.gif' %>";
    Wayfarer.dimensions = {
       width: <%= @width %>
      ,height: <%= @height %>
    };
  </script>
<%end%>


<%= content_for :content do %>
  <%= yield %>
  <div id="map">
  </div>
<% end %>

<%= render :template => 'layouts/application' %>
